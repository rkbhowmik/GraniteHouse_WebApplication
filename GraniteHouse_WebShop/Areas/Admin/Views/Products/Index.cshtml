@model IEnumerable<GraniteHouse_WebShop.Models.Products>

@{
    ViewData["Title"] = "Index";
}

<br /><br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info"> Product List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; New Product</a>
    </div>
</div>

<br />

<div>
    <table class="table table-striped">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Price)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Availablity)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.ProductTypes)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.SpecialTags)
            </th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td> @Html.DisplayFor(m => item.Name) </td>
            <td> @Html.DisplayFor(m => item.Price) </td>
            <td> @Html.DisplayFor(m => item.Availablity) </td>
            <td> @Html.DisplayFor(m => item.ProductTypes.Name) </td>
            <td> @Html.DisplayFor(m => item.SpecialTags.Name) </td>
            <td><partial name="_TableButtonPartial" model="item.Id" /></td>
        </tr>
        }
    </table>
</div>